<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"                android:orientation="vertical"                android:layout_width="match_parent"                android:layout_height="match_parent">    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textAppearance="?android:attr/textAppearanceLarge"        android:text="Large Text"        android:id="@+id/idOs"        android:layout_alignParentTop="true"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"/>    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textAppearance="?android:attr/textAppearanceSmall"        android:text="Small Text"        android:id="@+id/hora"        android:layout_marginRight="61dp"        android:layout_marginEnd="61dp"        android:layout_alignBottom="@+id/idOs"        android:layout_alignParentRight="true"        android:layout_alignParentEnd="true"/>    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textAppearance="?android:attr/textAppearanceSmall"        android:text="Small Text"        android:id="@+id/data"        android:layout_alignTop="@+id/hora"        android:layout_centerHorizontal="true"/>    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textAppearance="?android:attr/textAppearanceSmall"        android:text="Small Text"        android:id="@+id/endereco"        android:layout_below="@+id/idOs"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"/></RelativeLayout>